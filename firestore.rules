rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email in [
        'admin@sneakr.com',
        'naum@sneakr.com'
      ];
    }
    
    // Products - anyone can read, only admins can write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Brands - anyone can read, only admins can write
    match /brands/{brandId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Orders - anyone can create, only admins can read/update
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Counter - only admins can access
    match /counters/{counterId} {
      allow read, write: if isAdmin();
    }
    
    // News - anyone can read, only admins can write
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Newsletter - anyone can subscribe, only admins can read
    match /newsletter/{subscriberId} {
      allow create: if request.resource.data.email.matches('.*@.*\\..*');
      allow read, delete: if isAdmin();
    }
  }
}
