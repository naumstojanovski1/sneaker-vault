rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products - anyone can read, only authenticated users can write
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Orders - anyone can create, authenticated users can read/update
    match /orders/{orderId} {
      allow create: if true;
      allow read, update: if request.auth != null;
    }
    
    // Counter - authenticated users can access
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
    
    // News - anyone can read, authenticated users can write
    match /news/{newsId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Newsletter - anyone can subscribe, authenticated users can read
    match /newsletter/{subscriberId} {
      allow create: if true;
      allow read: if request.auth != null;
    }
  }
}
